<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/logReg.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"/>
    <script type="text/javascript" src="/logRegFunctions.js" defer></script>
</head>

<% if (messages.error) { %>
	<div class="error-div">
		<h4 class="flash"> <%= messages.error %> </h4>
	</div>
<% } %>

<div class="container" id="container">
	<div class="form-container sign-up-container">
		<form action="/register" method="POST">
			<h1>Sign Up</h1>
			
            <div class="social-container">
				<a href="/auth/facebook"><i class="fa fa-facebook"></i></a>
				<a href="/auth/google"><i class="fa fa-google"></i></a>
				<a href="/auth/twitter"><i class="fa fa-twitter"></i></a>
			</div>
			
            <span>or sign up with your email</span>
			<input type="text" placeholder="First Name" name="firstName" required value="<%= user.firstName %>">
            <input type="text" placeholder="Last Name" name="lastName" required value="<%= user.lastName %>">
			<input type="email" placeholder="Email" name="email" required value="<%= user.email %>">
			<input type="password" placeholder="Password" name="password" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[!@#$%^&*_=+-]).{8,25}$" required>
			<input type="password" placeholder="Confirm Password" name="confirm" required>
			<p class="pass-req">Passwords should include an Uppercase and Lowercase letter, a number, and a special character while being at least 8 characters.</p>
			<button>Sign Up</button>
		</form>
	</div>
	
    <div class="form-container sign-in-container">
		<form action="/login" method="POST">
			<h1>Sign In</h1>
			
            <div class="social-container">
				<a href="/auth/facebook"><i class="fa fa-facebook"></i></a>
				<a href="/auth/google"><i class="fa fa-google"></i></a>
				<a href="/auth/twitter"><i class="fa fa-twitter"></i></a>
			</div>
			
            <span>or use your account</span>
			<input type="email" placeholder="Email" name="email"/>
			<input type="password" placeholder="Password" name="password"/>
			<a href="#">Forgot Password?</a>
			<button>Sign In</button>
		</form>
	</div>
	
    <div class="overlay-container">
		<div class="overlay">
			<div class="overlay-panel overlay-left">
				<p>Sign in to share your thoughts!</p>
				<button class="ghost" id="signIn">Sign In</button>
			</div>
			<div class="overlay-panel overlay-right">
				<p>Sign up to leave comments!</p>
				<button class="ghost" id="signUp">Sign Up</button>
			</div>
		</div>
	</div>
</div>