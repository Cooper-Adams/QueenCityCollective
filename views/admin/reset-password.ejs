<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/logReg.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"/>
    <script type="text/javascript" src="/logRegFunctions.js" defer></script>
    <title>Reset Password</title>
</head>

<% if (messages.error) { %>
	<div class="error-div">
		<h4 class="flash"> <%= messages.error %> </h4>
	</div>
<% } %>

<div class="container" id="container">
    <div class="form-container sign-in-container">
		<form action="/reset-password" method="POST">
            <h1>Reset Password</h1>
			<p style="display: flex; position: relative;">
				<input type="password" placeholder="Password" name="password" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[!@#$%^&*_=+-]).{8,25}$" required>
				<i class="fa fa-eye pw-toggle" id="pw-toggle" aria-hidden="true"></i>
			</p>
			<input type="text" name="id" value="<%= userId %>" hidden>
			<button>Reset</button>
		</form>
	</div>
	
    <div class="overlay-container">
		<div class="overlay">
			<div class="overlay-panel overlay-right">
				<p>Enter a new password. Passwords must contain an uppercase and lowercase letter, a number, a special character, and be at least 8 characters long.</p>
			</div>
		</div>
	</div>
</div>