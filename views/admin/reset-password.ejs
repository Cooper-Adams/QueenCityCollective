<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/logReg.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"/>
    <script type="text/javascript" src="/logRegFunctions.js" defer></script>
    <title>Reset Password</title>
</head>

<% if (messages.error) { %>
	<div class="error-div">
		<h4 class="flash"> <%= messages.error %> </h4>
	</div>
<% } %>

<div class="reset-container">
	<form action="/reset-password" method="POST">
		<h1>Enter New Password</h1>
		<p>Enter a new password. Passwords must contain an uppercase and lowercase letter, a number, and be at least 8 characters long.</p>
		<p style="display: flex; position: relative;">
			<input class="input-password" type="password" placeholder="Password" name="password" autocomplete="off" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" required>
			<i class="fa fa-eye pw-toggle" id="pw-toggle" aria-hidden="true"></i>
		</p>
		<input type="text" name="id" value="<%= userId %>" hidden>
		<button>Reset</button>
	</form>
</div>