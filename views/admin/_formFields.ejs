<div class="top">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="<%= article.title %>" required>

    <label for="description">Description:</label>
    <input type="text" id="description" name="description" value="<%= article.description %>" required>

    <div class="top-row">
        <div class="top-piece">
            <label for="author">Author:</label>
            <select name="author" id="author" required>
                <option value="Cooper Adams">Cooper Adams</option>
                <option value="Owen Watterson">Owen Watterson</option>
            </select>
        </div>

        <div class="top-piece">
            <label for="date">Created At:</label>
            <input type="datetime-local" name="createdAt" <% let newDate = new Date(article.createdAt.getTime() - article.createdAt.getTimezoneOffset()*60000) %> value="<%= newDate.toISOString().slice(0, -1) %>" required>
        </div>

        <div class="top-piece">
            <label for="date">Updated At:</label>
            <input type="datetime-local" name="updatedAt" <% newDate = new Date(article.updatedAt.getTime() - article.updatedAt.getTimezoneOffset()*60000) %> value="<%= newDate.toISOString().slice(0, -1) %>" required>
        </div>

        <div class="top-id" style="display: none;">
            <input type="text" name="_id" value="<%= article._id %>">
        </div>
    </div>
</div>

<div class="middle">
    <div class="texteditor">
        <label for="markdown"></label>
        <textarea name="markdown" id="editor"><%= article.sanitizedHtml %></textarea>
    </div>

    <div class="middle-right">
        <div class="tagsTop">
            <div class="tagsHeader">
                <h3>Article Tags</h3>
                <button type="button" id="newTagBtn" class="newTagBtn">+</button>
            </div>
            <div id="tags" class="tags">
                <% for (let i = 0; i < article.tags.length; ++i) { %>
                    <div class="tag">
                        <input class="tag-input" type="text" value="<%= article.tags[i] %>" name="tags[]">
                        <button type="button" id="tagBtn" class="tagBtn">âœ–</button>
                    </div>
                    <% } %>
                </div>
            </div>
            
        <div class="categoryBottom">
            <div class="categoryOptions">
                <label for="category">Category:</label>
                <select name="category" id="category">
                    <option value="Panthers">Carolina Panthers</option>
                    <option value="Hornets">Charlotte Hornets</option>
                    <option value="CharlotteFC">Charlotte Football Club</option>
                </select>
            </div>

            <div class="publishOptions">
                <label for="radio">Publish?</label>
                <input type="radio" id="true" name="truefalse" value="true" <% if (article.published == true) { %> checked <% } %>>
                <label for="true">Yes</label><br>
                <input type="radio" id="false" name="truefalse" value="false" <% if (article.published == false) { %> checked <% } %>>
                <label for="false">No</label><br>
            </div>

            <input class="formSubmit" id="submit" type="submit" value="Submit Article">
        </div>
    </div>
</div>